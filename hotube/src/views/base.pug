doctype html 
html(lang="ko")
    head
        link(rel="stylesheet" ,href="https://unpkg.com/mvp.css@1.12/mvp.css")
        title #{pageTitle} - hotube
    body 
        header
            h1=pageTitle
            nav
                ul
                    li
                        a(href="/") Home
                    if loggedIn
                        li
                            a(href="/users/logout") Logout
                        li
                            a(href="/profile") #{user.name} Profile 
                    else
                        li
                            a(href="/join") Join
                        li
                            a(href="/login") Log in
                    li
                        a(href="/videos/upload") Upload
                    li
                        a(href="/search") Search
        main
            block content
    include partials/footer.pug