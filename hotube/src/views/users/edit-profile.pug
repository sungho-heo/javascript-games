extends ../base.pug

block content
    if errorMessage
        span=errorMessage
    div
        form(method="POST",enctype="multipart/form-data").edit-profile__form
            label(for="avatar") Avatar
            input(type="file", id="avatar", name="avatar" ,accept="image/*")
            input(type="email" name="email",required, value=user.email, placeholder="email")
            input(type="text", name="username",required, value=user.username, placeholder="username")
            input(type="text" name="nickname",required value=user.nickname, placeholder="nickname")
            input(type="text", name="location", value=user.location, placeholder="location")
            input(type="submit", value="Edit")
            if !user.socialOnly
                div.edit-profile__password
                    a(href="change-password") Change password &rarr;