extends ../base.pug

block content
    div.upload__container
        div.upload__video
            video#preview
            button#recoderBtn.social__btn Start Recording
        if errorMessage
            span=errorMessage
        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video file
            input(type="file",id="video" ,required, name="video", accept="video/*")
            label(for="thumbnail") Thumbnail file
            input(type="file", id="thumbnail" ,required, name="thumbnail", accept="image/*")
            input(placeholder="Title", required type="text", name="title", maxlength=30)
            input(placeholder="description", required, type="text", name="description", minlength=30)
            input(placeholder="hashtags, separated by comma.", required, type="text", name="hashtags")
            input(type="submit", value="Upload video")
block scripts
    script(src="/static/js/recoder.js")

    