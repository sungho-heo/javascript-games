mixin video(video)
    div
        h4 
            a(href=`/videos/${video.id}`)=video.title
        p=video.description
        p #{video.meta.views} #{video.meta.views ===1 || video.meta.views ===0 ? "view" : "views"}
        p #{video.meta.rating}/5 rating
        ul
            each hashtags in video.hashtags
                li=hashtags
        small=video.createdAt
        hr  
